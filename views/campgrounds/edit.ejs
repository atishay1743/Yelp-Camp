        <input type="text" name="campground[title]" id="title" value="<%= campground.title %>">
    </div>
    <div>
        <label for="location">Location</label>
        <input type="text" name="campground[location]" id="title" value="<%= campground.location %>" >
    </div>
    <button>Update Campground</button>
    </form>
    <a href="/campgrounds/<%= campground._id %>">Back to Campgrounds</a>
</body>
